<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@android:color/background_dark"
        android:text="here is a test"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="111dp"
        android:layout_height="166dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_title"
        />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="3000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_title" />

    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="2000min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year" />


    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="10.0/10.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/length" />

    <Button
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/movie_poster"
        android:text="here goes the description"/>


    <View
        android:id="@+id/trailer_divider"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_marginEnd="8dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginStart="8dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/trailers_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trailers:"
        app:layout_constraintTop_toBottomOf="@id/trailer_divider"/>


    <ImageView
        android:id="@+id/play_button_1"
        android:src="@drawable/ic_play_arrow_black_60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/trailers_title"/>

    <TextView
        android:id="@+id/trailer_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trailer 1"
        app:layout_constraintLeft_toRightOf="@id/play_button_1"
        app:layout_constraintTop_toBottomOf="@id/trailers_title"/>

    <ImageView
        android:id="@+id/play_button_2"
        android:src="@drawable/ic_play_arrow_black_60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/play_button_1"/>


    <TextView
        android:id="@+id/trailer_2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trailer 2"
        app:layout_constraintLeft_toRightOf="@id/play_button_2"
        app:layout_constraintTop_toBottomOf="@id/play_button_1"/>

</android.support.constraint.ConstraintLayout>